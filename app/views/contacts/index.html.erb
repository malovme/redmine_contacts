<div class="contextual">
  <% if User.current.allowed_to?(:add_contacts, @project, :global => true) %>
    <%= link_to l(:label_contact_new), new_contact_path(@project), :class => 'icon icon-add new-issue' %>
  <% end %>
</div>

<h2><%= l(:label_contact_plural) %></h2>


<% if @contacts.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
  <%= render :partial => 'contacts/list', :locals => { contacts: @contacts } %>
  <span class="pagination"><%# pagination_links_full @issue_pages, @issue_count %></span>
<% end %>